package BaseDeDatos.persona;


import java.sql.Connection;

import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.SQLException;
import javax.swing.JOptionPane;

/**
 *
 * @author melan
 */
public class conexion {

    private static final String bd = "jdbc_mysql";
    private static final String user = "cybbt";
    private static final String pass = "cybbt2018";
    private static final String url = "jdbc:mysql://localhost/" + bd;
    private static String DRIVER = null;

    //conexion a la base de dato
    public static synchronized Connection getConnection() {
        Connection cn = null;
        try {
            Class.forName("com.mysql.jdbc.Driver");
            cn = DriverManager.getConnection(url, user, pass);
            JOptionPane.showMessageDialog(null, "CONECTADO A LA BASE DE DATO CORRECTEMENTE");
        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e.getMessage());
        }

        return cn;

    }

    //cerrar el resulset
    public static void close(ResultSet rs) {
        if (rs != null) {
            try {
                rs.close();
            } catch (SQLException ex) {
                ex.printStackTrace();
            }
        }
    }

    public static void close(PreparedStatement pst) {
        if (pst != null) {
            try {
                pst.close();

            } catch (Exception e) {
                e.printStackTrace();
            }
        }
    }

    public static void main(String[] args) {
        conexion cnx = new conexion();
        cnx.getConnection();
    }

}
